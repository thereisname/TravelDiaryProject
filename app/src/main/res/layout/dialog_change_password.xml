<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_test"
    android:paddingBottom="100dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput3"
        style="@style/register_Layout"
        android:layout_marginTop="50dp"
        android:hint="새 비밀번호"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconTint="@color/icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNewPw"
            style="@style/register_EditText"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput4"
        style="@style/register_Layout"
        android:hint="새 비밀번호 확인"
        app:hintTextColor="@color/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNewRePw"
            style="@style/register_EditText"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_button"
        style="@style/confirmBtn"
        android:layout_marginTop="64dp"
        android:text="@string/setting_config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput4" />
</androidx.constraintlayout.widget.ConstraintLayout>