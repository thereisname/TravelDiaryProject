<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelDiary" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/blue2</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/gangwon</item>
    </style>

    <style name="inputEdit_style">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="android:textColorHint">@color/blue2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:backgroundTint">@color/blue2</item>
        <item name="android:fontFamily">@font/gangwon</item>
        <item name="android:lines">1</item>
    </style>
    <style name="inputEdit_style.register">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginHorizontal">30dp</item>
    </style>

    <style name="login_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:fontFamily">@font/gangwon</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="confirmBtn">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_marginHorizontal">80dp</item>
        <item name="android:fontFamily">@font/gangwon</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>